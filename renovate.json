{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "assignees": ["jxn-30"],
    "baseBranches": ["main", "v2"],
    "dependencyDashboard": true,
    "dependencyDashboardFooter": "Node.js and yarn updates are scheduled to the first day of the month. PRs will be created on mondays, wednesdays and fridays before 3am (CEST) for any other dependencies. Lockfile maintenance is scheduled for saturdays.",
    "dependencyDashboardHeader": "# ℹ️ Renovate Dependency-Dashboard ℹ\nScheduled and currently open dependency updates are listed here\n",
    "dependencyDashboardLabels": ["dependencies"],
    "dependencyDashboardTitle": "⬆ℹ️ Renovate Dependency-Dashboard ℹ️",
    "labels": ["dependencies"],
    "lockFileMaintenance": {
        "assignees": ["jxn-30"],
        "enabled": true,
        "reviewers": ["jxn-30"],
        "schedule": ["before 3am on saturday"]
    },
    "packageRules": [
        {
            "groupName": "All non-major dependencies",
            "lockFileMaintenance": { "enabled": true },
            "groupSlug": "all-minor-patch",
            "matchPackageNames": ["*"],
            "matchUpdateTypes": ["minor", "patch"]
        },
        {
            "extends": ["schedule:monthly"],
            "groupName": "yarn",
            "lockFileMaintenance": { "enabled": true },
            "matchDepNames": ["yarn"],
            "matchManagers": ["npm"],
            "rangeStrategy": "pin",
            "separateMajorMinor": false
        },
        {
            "extends": ["schedule:monthly"],
            "groupName": "node.js",
            "lockFileMaintenance": { "enabled": true },
            "matchDepNames": ["node"],
            "matchManagers": ["npm", "nvm"],
            "rangeStrategy": "pin",
            "separateMajorMinor": false
        }
    ],
    "postUpdateOptions": ["yarnDedupeHighest"],
    "rangeStrategy": "pin",
    "reviewers": ["jxn-30"],
    "schedule": ["before 3am on Monday, Wednesday and Friday"],
    "timezone": "Europe/Berlin"
}
