{
    "name": "uzl-better-moodle",
    "description": "Improves the new weird Moodle 4 UI on UzL-Moodle",
    "version": "2.0.0",
    "packageManager": "yarn@4.3.1",
    "type": "module",
    "private": true,
    "scripts": {
        "lint:fix": "yarn eslint . --exit-on-fatal-error --report-unused-disable-directives --cache --cache-strategy content --fix",
        "prettier:write": "prettier --write --cache --cache-strategy content .",
        "prettier:dist": "prettier --write dist --ignore-path dummy",
        "prettier:i18n": "prettier --write src/i18n",
        "tsm": "typed-scss-modules 'src/{style,features}/**/*.module.scss' --nameFormat camel --exportType named --banner '// I am autogenerated. Do NOT modify me!\n\n'",
        "dev": "vite",
        "prebuild": "yarn i18n:once && yarn tsm && tsc",
        "build": "yarn prebuild && vite build -- --config=${0} && yarn postbuild",
        "build:uzl": "yarn build uzl",
        "build:cau": "yarn build cau",
        "postbuild": "yarn prettier:dist",
        "preview": "vite preview",
        "i18n:watch": "typesafe-i18n",
        "i18n:once": "typesafe-i18n --no-watch",
        "config:scheme": "ts-json-schema-generator --path 'configs/*.d.ts' --type 'Config' > configs/_schema.json",
        "ci": "yarn lint:fix && yarn prettier:write && yarn build ${0}"
    },
    "dependencies": {
        "classnames": "2.5.1",
        "darkreader": "4.9.87",
        "jsx-dom": "8.1.4",
        "typesafe-i18n": "5.26.2"
    },
    "devDependencies": {
        "@eslint/js": "9.5.0",
        "@types/eslint": "8.56.10",
        "@types/eslint__js": "8.42.3",
        "@types/jquery": "3.5.30",
        "@types/node": "20.14.9",
        "@types/tampermonkey": "5.0.3",
        "eslint": "9.5.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-jsdoc": "48.5.0",
        "eslint-plugin-jsx-a11y": "6.9.0",
        "eslint-plugin-userscripts": "0.5.3",
        "fast-glob": "3.3.2",
        "globals": "15.6.0",
        "prettier": "3.3.2",
        "sass": "1.77.6",
        "ts-json-schema-generator": "2.3.0",
        "typed-scss-modules": "8.0.1",
        "typescript": "5.5.2",
        "typescript-eslint": "7.14.1",
        "typescript-plugin-css-modules": "5.1.0",
        "userscript-meta": "1.0.1",
        "vite": "5.3.2",
        "vite-plugin-monkey": "4.0.3"
    }
}
